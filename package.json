{
  "name": "taskusnow-api",
  "version": "1.0.0",
  "description": "taskusnowAPI",
  "main": "index.js",
  "scripts": {
    "test": "cross-env DOTENV_CONFIG_PATH=config/.env.test jest --runInBand --setupFiles=dotenv/config --coverage",
    "test:watch": "cross-env DOTENV_CONFIG_PATH=config/.env.test jest --runInBand -setupFiles=dotenv/config --watchAll",
    "build": "npx tsc",
    "start": "node -r dotenv/config dist/src/server.js dotenv_config_path=config/.env",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -r dotenv/config -q dist/src/server.js dotenv_config_path=config/.env.dev\" ",
    "lint": "eslint src",
    "jest": "jest",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ModernSoftwareDevelopement/taskusnow-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ModernSoftwareDevelopement/taskusnow-api/issues"
  },
  "homepage": "https://github.com/ModernSoftwareDevelopement/taskusnow-api#readme",
  "dependencies": {
    "aws-sdk": "^2.1467.0",
    "cloudinary": "^1.41.0",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-oauth2-jwt-bearer": "^1.5.0",
    "mongoose": "^7.6.3",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/config": "^3.3.3",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.4.10",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "helmet": "^7.0.0",
    "husky": "^8.0.3",
    "jest-html-reporter": "^3.10.2",
    "lint-staged": "^14.0.1",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.1",
    "prettier": "3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "lint-staged": {
    "/src": "npx prettier --write"
  }
}
